---
interface Props {
  title: string;
  image?: string;
  imageAlt?: string;
  reverse?: boolean;
  background?: string;
}

const { title, image, imageAlt = "Producto", reverse = false, background = "gradient" } = Astro.props;
---

<div class={`product-section ${reverse ? 'reverse' : ''}`} data-background={background}>
  <div class="abstract-bg">
    {background === 'gradient' && (
      <div class="gradient-blob blob-1"></div>
      <div class="gradient-blob blob-2"></div>
    )}
    {background === 'dots' && (
      <div class="dots-pattern"></div>
    )}
    {background === 'waves' && (
      <div class="waves-pattern"></div>
    )}
  </div>

  <div class="section-container">
    {image && (
      <div class="image-wrapper">
        <img src={image} alt={imageAlt} />
      </div>
    )}
    <div class="content-wrapper">
      <h2>{title}</h2>
      <div class="content">
        <slot />
      </div>
    </div>
  </div>
</div>

<style>
  .product-section {
    position: relative;
    padding: 4rem 2rem;
    margin: 3rem 0;
    overflow: hidden;
    border-radius: 20px;
  }

  .abstract-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    opacity: 0.6;
  }

  .gradient-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 8s ease-in-out infinite;
  }

  .blob-1 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    top: -100px;
    left: -100px;
    animation-delay: 0s;
  }

  .blob-2 {
    width: 350px;
    height: 350px;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    bottom: -100px;
    right: -100px;
    animation-delay: 2s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .dots-pattern {
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle, #667eea 2px, transparent 2px);
    background-size: 40px 40px;
    opacity: 0.3;
  }

  .waves-pattern {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent 30%, rgba(102, 126, 234, 0.2) 30%, rgba(102, 126, 234, 0.2) 70%, transparent 70%);
    background-size: 60px 60px;
  }

  .section-container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .product-section.reverse .section-container {
    direction: rtl;
  }

  .product-section.reverse .content-wrapper {
    direction: ltr;
  }

  .image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    animation: slideIn 0.8s ease-out;
  }

  .image-wrapper img {
    max-width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s;
  }

  .image-wrapper img:hover {
    transform: scale(1.05) rotate(2deg);
  }

  .content-wrapper {
    animation: fadeInUp 0.8s ease-out;
  }

  .content-wrapper h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .section-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-section.reverse .section-container {
      direction: ltr;
    }

    .content-wrapper h2 {
      font-size: 2rem;
    }
  }
</style>
